= simple_form_for [:users, course, lesson] do |f|
  .box-body
    .form-group
      %br
      %label Title
      = f.input :title, label: false, placeholder: 'Enter title', input_html: { class: 'form-control' }
      %label Position
      = f.input :position, collection: 1..course.lessons_count, label: false, placeholder: 'Enter title', input_html: { class: 'form-control' }
      %label Start date
      = f.input :start_date, as: :string, label: false, html5: true, input_html: { class: 'form-control', id: 'lesson_new_start_date' }
      %label Descriprion
      = f.input :description, as: :text, label: false, placeholder: 'Enter title', input_html: { class: 'form-control' }
      %label Synopsis
      = f.input :synopsis, as: :text, label: false, placeholder: 'Enter title', input_html: { class: 'form-control' }
      %label Homework
      = f.input :homework, as: :text, label: false, placeholder: 'Enter title', input_html: { class: 'form-control' }
    .form-group
      %label{for: 'exampleInputFile'} Picture
      = f.file_field :picture, id: 'exampleInputFile'
  .box-footer
    = f.button :submit, class: 'btn btn-primary'
