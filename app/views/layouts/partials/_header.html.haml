%header.main-header
  = link_to root_path, method: :get, class: 'logo' do
    %span.logo-mini
      %b> OC
    %span.logo-lg
      %b> Online courses
  %nav.navbar.navbar-static-top
    %a.sidebar-toggle{'data-toggle': 'push-menu', href: '#', role: 'button'}
      %span.sr-only Toggle navigation
    .navbar-custom-menu
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{'data-toggle': 'dropdown', href: '#'}
              = image_tag current_user.picture.thumb, class: 'user-image', alt: 'User Image'
              %span.hidden-xs
                = current_user.first_name
                = current_user&.last_name
            %ul.dropdown-menu
              %li.user-header
                = image_tag current_user.picture.thumb, class: 'img-circle', alt: 'User Image'
                %p
                  = current_user.first_name
                  = current_user&.last_name
                  %small Member since #{current_user.created_at.strftime("%b. %Y")}
              %li.user-footer
                .pull-left
                  = link_to 'Profile', users_profile_path, method: :get, class: 'btn btn-default btn-flat'
                .pull-right
                  = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
        - else
          %li
            = link_to 'Sign in', new_user_session_path
          %li
            = link_to 'Sign up', new_user_registration_path
