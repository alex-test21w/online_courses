%aside.main-sidebar
  %section.sidebar
    - if user_signed_in?
      .user-panel
        .pull-left.image
          = image_tag current_user.picture.thumb, class: 'img-circle', alt: 'User Imag'
        .pull-left.info
          %p
            = current_user.first_name
            = current_user&.last_name
          = link_to '#' do
            %i.fa.fa-circle.text-success
            Online
      %ul.sidebar-menu{'data-widget': 'tree'}
        %li.header MAIN NAVIGATION
        %li.active.treeview
          = link_to root_path, method: :get do
            %i.fa.fa-dashboard
            %span Dashboard
        %li.treeview
          = link_to courses_path, method: :get do
            %i.fa.fa-files-o
            %span Courses
        %li.treeview
          = link_to users_courses_path, method: :get do
            %i.fa.fa-files-o
            %span My courses
        %li.treeview
          = link_to homeworks_path, method: :get do
            %i.fa.fa-files-o
            %span My homeworks
