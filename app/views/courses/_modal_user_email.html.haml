.modal-dialog
  .modal-content
    .modal-header
      %button.close{'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button'}
        %span{'aria-hidden': 'true'} Ã—
      %h4.modal-title You should add email for continue
    .modal-body
      = simple_form_for current_user, url: course_subscriptions_path, method: :post, html: { id: 'modal_user_email_form' } do |f|
        .box-body
          .form-group
            %br
            %label Email
            = f.input :email, label: false, placeholder: 'Enter email', input_html: { class: 'form-control' }
    .modal-footer
      %button.btn.btn-default.pull-left{'data-dismiss': 'modal', type: 'button'} Close
      %button.btn.btn-primary{type: 'submit', form: 'modal_user_email_form'} Save changes
