%body.hold-transition.register-page
  .register-box
    .register-logo
      = link_to new_user_registration_path do
        %b> Sign up
    .register-box-body
      %p.login-box-msg Register a new membership
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.simple_fields_for :profile do |profile|
          .form-group.has-feedback
            = profile.input :first_name, required: true, label: false, placeholder: 'First name', input_html: { class: 'form-control' }
            %span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            = profile.input :last_name, required: true, label: false, placeholder: 'Last name', input_html: { class: 'form-control' }
            %span.glyphicon.glyphicon-user.form-control-feedback
        .form-group.has-feedback
          = f.input :email, required: true, placeholder: 'Email', autofocus: true, label: false, input_html: { class: 'form-control' }
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.input :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'form-control' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .form-group.has-feedback
          = f.input :password_confirmation, required: true, label: false, placeholder: 'Retype password', input_html: { class: 'form-control' }
          %span.glyphicon.glyphicon-log-in.form-control-feedback
        .form-group.has-feedback
          = f.input :picture, as: :file, label: false, input_html: { class: 'form-control' }
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .row
          .col-xs-8
          .col-xs-4
            = f.button :submit, 'Register', class: 'button btn btn-primary btn-block btn-flat'
      = render 'devise/shared/links'
