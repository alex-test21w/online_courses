%body.hold-transition.login-page
  .login-box
    .login-logo
      = link_to new_user_session_path do
        %b> Log in
    .login-box-body
      %p.login-box-msg Sign in to start your session
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group.has-feedback
          = f.input :email, required: false, label: false, placeholder: 'Email', autofocus: true, input_html: { class: 'form-control' }
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.input :password, required: false, label: false, placeholder: 'Password', autofocus: true, input_html: { class: 'form-control' }
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .row
          .col-xs-8
            .checkbox.icheck
              %label
                = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .col-xs-4
            = f.button :submit, 'Sign In', class: 'btn btn-primary btn-block btn-flat'
      = render 'devise/shared/links'
